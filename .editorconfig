# EditorConfig 配置文件
# 统一项目代码风格
# 最后更新: 2025-10-20
# 官方网站: https://editorconfig.org

# 顶级配置文件
root = true

# ========== 全局默认配置 ==========
[*]
# 字符集
charset = utf-8

# 换行符（使用 LF）
end_of_line = lf

# 文件末尾添加空行
insert_final_newline = true

# 移除行尾空白
trim_trailing_whitespace = true

# ========== Rust 文件 ==========
[*.rs]
# 缩进风格：空格
indent_style = space

# 缩进大小：4个空格（Rust 标准）
indent_size = 4

# 最大行长度（rustfmt 默认 100）
max_line_length = 100

# ========== Cargo 配置文件 ==========
[Cargo.toml]
indent_style = space
indent_size = 4

[Cargo.lock]
# Cargo.lock 自动生成，不修剪空白
trim_trailing_whitespace = false

# ========== TOML 配置文件 ==========
[*.toml]
indent_style = space
indent_size = 4

# ========== Markdown 文档 ==========
[*.md]
indent_style = space
indent_size = 2

# Markdown 允许行尾空格（用于换行）
trim_trailing_whitespace = false

# 最大行长度建议
max_line_length = 120

# ========== JSON 文件 ==========
[*.json]
indent_style = space
indent_size = 2

# ========== YAML 文件 ==========
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ========== Shell 脚本 ==========
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# ========== PowerShell 脚本 ==========
[*.ps1]
indent_style = space
indent_size = 4
end_of_line = crlf

# ========== Dockerfile ==========
[Dockerfile*]
indent_style = space
indent_size = 2

# ========== JavaScript/TypeScript ==========
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# ========== CSS/SCSS ==========
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# ========== HTML ==========
[*.html]
indent_style = space
indent_size = 2

# ========== XML ==========
[*.xml]
indent_style = space
indent_size = 2

# ========== Makefile ==========
[Makefile]
# Makefile 必须使用 Tab
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab

# ========== Git 配置 ==========
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# ========== CI/CD 配置 ==========
[.github/**/*.{yml,yaml}]
indent_style = space
indent_size = 2

[.gitlab-ci.yml]
indent_style = space
indent_size = 2

# ========== 许可证和文档 ==========
[{LICENSE,NOTICE,README,CHANGELOG}*]
indent_style = space
indent_size = 2



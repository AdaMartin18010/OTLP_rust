# EditorConfig 配置文件
# https://editorconfig.org

# 这是根配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown 文件
[*.md]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

# Rust 文件
[*.rs]
indent_style = space
indent_size = 4

# TOML 文件
[*.toml]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2

# PowerShell 脚本
[*.ps1]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
